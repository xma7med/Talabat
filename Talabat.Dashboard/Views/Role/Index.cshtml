@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "Index";
}

<h1>All Roles</h1>

<hr />

<partial name="RoleFormPartialView" model="new RoleFormViewModel()" />

@if (Model.Count() > 0)
{
    @* Table For Roles  *@
    <table class ="table table-striped tabletable-hover ">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(r => r.Id)</th>
                <th>@Html.DisplayNameFor(r => r.Name)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>
                    @* For Actions 2 Link Edit  , Delete  *@
                    <td>
                        <a calss="btn btn-outline-warning" asp-action="Edit" asp-route-id="@role.Id"> Edit </a>
                        <a calss="btn btn-outline-danger" asp-action="Delete" asp-route-id="@role.Id"> Delete </a>
                        
                    </td>
                </tr>

            }
        </tbody>
    </table>
}
else
{
    <div class ="mt-3 p-3 alert-warning" >
        <h2>There is no roles</h2>

    </div> 
}

@section Scripts{
    <partial name="_ValidationScriptsPartial" />

}

