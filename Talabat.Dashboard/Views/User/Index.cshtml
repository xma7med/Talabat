@model IEnumerable<UserViweModel>

@{
    ViewData["Title"] = "Index";

}



<h1>All Users</h1>

<hr />


@if (Model.Count() > 0)
{
    @* Table For Roles  *@
    <table class="table table-striped tabletable-hover ">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(u => u.UserName)</th>
                <th>@Html.DisplayNameFor(u => u.DisplayName)</th>
                <th>@Html.DisplayNameFor(u => u.Email)</th>
                <th>@Html.DisplayNameFor(u => u.PhoneNumber)</th>
                @* <th>@Html.DisplayNameFor(u => u.Roles)</th> *@

                <th>Roles</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {

                <tr>
                    <td>@user.UserName</td>
                    <td>@user.DisplayName</td>
                    <td>@user.Email</td>
                    <td>@user.PhoneNumber</td>
                    <td>@string.Join("," , user.Roles.ToList())</td>

                    @* For Actions 2 Link Edit  , Delete  *@
                    <td>
                        <a calss="btn btn-outline-warning" asp-action="Edit" asp-route-id="@user.Id"> Edit </a>

                    </td>
                </tr>

            }
        </tbody>
    </table>
}
else
{
    <div class="mt-3 p-3 alert-warning">
        <h2>There is no Users</h2>

    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

}

